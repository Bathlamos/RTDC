<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="rtdc.core.model.Message" table="MESSAGES">
        <id name="id" type="integer" column="message_id">
            <generator class="increment"/>
        </id>
        <!--<one-to-one name="sender" class="rtdc.core.model.User"/>
        <one-to-one name="receiver" class="rtdc.core.model.User"/>
        <property name="sender" column="sender" type="rtdc.core.model.User"/>
        <property name="receiver" column="receiver" type="rtdc.core.model.User"/>-->
        <!--<property name="sender" column="sender">
            <type name="org.hibernate.mapping.Column">
                <param name="columnClass">rtdc.core.model.User</param>
            </type>
        </property>
        <property name="receiver" column="receiver">
            <type name="org.hibernate.mapping.Column">
                <param name="columnClass">rtdc.core.model.User</param>
            </type>
        </property>-->
        <property name="senderID" column="senderID" type="integer"/>
        <property name="receiverID" column="receiverID" type="integer"/>
        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">rtdc.core.model.Message$Status</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="timeSent" column="timeSent" type="java.util.Date"/>
        <property name="content" column="content" type="string"/>
    </class>
</hibernate-mapping>