<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/releases/2.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="web">

    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- Specify the app entry point class.                   -->
    <entry-point class='rtdc.web.client.web'/>

    <!-- Do not include the <script> tags in the *.gwt.xml files -->
    <!-- Those are included in the host html page -->
    <set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE'/>

    <!-- Dependencies -->
    <inherits name="rtdc.core.Core" />

    <inherits name="it.netgrid.gwt.PouchDB" />



    <!-- Specify the app servlets.                   -->
    <servlet path='/webService' class='rtdc.web.server.webServiceImpl'/>

</module>