<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RTDCActionBarTheme"
           parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/RTDC_light_blue</item>
        <item name="colorPrimaryDark">@color/RTDC_dark_blue</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <color name="RTDC_light_blue">#3498db</color>
    <color name="RTDC_dark_blue">#2980b9</color>
    <color name="RTDC_midnight_blue">#2c3e50</color>
    <color name="RTDC_wet_asphalt">#34495e</color>
    <color name="RTDC_white">#eeeeee</color>
    <color name="RTDC_black">#303030</color>
    <color name="RTDC_grey">#424242</color>
    <color name="RTDC_grey_asbestos">#7f8c8d</color>
    <color name="RTDC_light_grey">#ffbababa</color>

    <color name="RTDC_red">#c0392b</color>
    <color name="RTDC_dark_red">#852015</color>
    <color name="RTDC_yellow">#f39c12</color>
    <color name="RTDC_green">#27ae60</color>
    <color name="RTDC_dark_green">#1F8249</color>

    <color name="RTDC_purple">#8e44ad</color>

    <color name="RTDC_grey_selection">#e0e0e0</color>

    <color name="ColorPrimary">@color/RTDC_light_blue</color>
    <color name="ColorPrimaryDark">@color/RTDC_dark_blue</color>

    <style name="PrimaryButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/RTDC_dark_blue</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="ErrorLabel" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/RTDC_red</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:padding">@dimen/label_padding</item>
    </style>

</resources>