<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="RTDCActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RTDCActionBar</item>
        <item name="android:actionMenuTextColor">@color/RTDC_white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="RTDCActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/RTDC_light_blue</item>
        <item name="android:titleTextStyle">@style/RTDCActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="RTDCActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/RTDC_white</item>
    </style>

    <color name="RTDC_light_blue">#33b5e5</color>
    <color name="RTDC_dark_blue">#0099cc</color>
    <color name="RTDC_white">#eeeeee</color>
    <color name="RTDC_black">#333333</color>
    <color name="RTDC_red">#cc0000</color>

</resources>