<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="#E1E1E1" android:paddingTop="5dp"
              android:paddingBottom="5dp">

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" android:layout_gravity="center_vertical"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editStatus" android:layout_weight="2"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" android:layout_gravity="center_vertical"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/editRole"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#000000" android:background="@android:color/transparent"
                android:gravity="center" android:textSize="14dp"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" android:layout_gravity="center_vertical"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editAction" android:layout_weight="2"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/actionSpecifier"
                android:background="@android:color/transparent"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#000000" android:enabled="false" android:gravity="center" android:visibility="gone">
        </EditText>

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/editTarget"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#000000" android:background="@android:color/transparent"
                android:gravity="center" android:textSize="14dp"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/editDeadline"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#000000" android:background="@android:color/transparent"
                android:gravity="center" android:textSize="14dp"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:padding="7dp">
    <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Notes"
            android:id="@+id/notesTitle"
            android:layout_weight="1" android:layout_gravity="center_vertical"
            android:textColor="#000000" android:background="@android:color/transparent"
            android:textStyle="bold" android:gravity="center" android:textSize="14dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/editNotes"
            android:background="@android:color/transparent"
            android:layout_weight="4" android:layout_gravity="center_vertical"
            android:textColor="#000000" android:gravity="left|center_vertical"
            android:textSize="14dp">
    </EditText>

    </LinearLayout>

</LinearLayout>