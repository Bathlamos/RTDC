<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                tools:context="rtdc.android.presenter.LoginActivity"
                android:background="@color/RTDC_light_grey"
                android:id="@+id/profile_layout"
                >

            <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="400dp"
                    card_view:cardCornerRadius="2dp"
                    android:id="@+id/profile_card_view">


                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" android:padding="16dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="John Doe" android:id="@+id/fullNameValue"
                              android:paddingRight="8dp"
                              android:textColor="@color/RTDC_black" android:textSize="32sp"
                              android:paddingBottom="8dp"/>
                    <GridLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent" android:columnCount="2" android:rowCount="4">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="@string/unit"
                                  android:id="@+id/unitLabel" android:paddingLeft="8dp" android:paddingRight="8dp"
                                  android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_row="0"
                                  android:layout_column="0"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/unit" android:id="@+id/unitValue"
                                  android:paddingLeft="8dp" android:paddingRight="8dp"
                                  android:textColor="@color/RTDC_black" android:textSize="16sp"
                                  android:paddingBottom="8dp" android:layout_column="1"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/email_address" android:id="@+id/emailLabel"
                                  android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="2dp"
                                  android:paddingBottom="2dp" android:layout_row="1" android:layout_column="0"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/email_address" android:id="@+id/emailValue"
                                  android:paddingLeft="8dp" android:paddingRight="8dp"
                                  android:textColor="@color/RTDC_black" android:textSize="16sp"
                                  android:paddingBottom="8dp" android:layout_column="1"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/phone_number" android:id="@+id/phoneLabel" android:paddingLeft="8dp"
                                  android:paddingRight="8dp" android:paddingTop="2dp" android:paddingBottom="2dp"
                                  android:layout_row="2" android:layout_column="0"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/phone_number" android:id="@+id/phoneValue"
                                  android:paddingLeft="8dp" android:paddingRight="8dp"
                                  android:textColor="@color/RTDC_black" android:textSize="16sp"
                                  android:paddingBottom="8dp" android:layout_column="1"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="@string/role"
                                  android:id="@+id/roleLabel" android:paddingLeft="8dp" android:paddingRight="8dp"
                                  android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_row="3"
                                  android:layout_column="0"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/role" android:id="@+id/roleValue"
                                  android:paddingLeft="8dp" android:paddingRight="8dp"
                                  android:textColor="@color/RTDC_black" android:textSize="16sp"
                                  android:paddingBottom="8dp" android:layout_column="1"/>
                    </GridLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

</RelativeLayout>



