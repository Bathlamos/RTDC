<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center_vertical" android:minHeight="45dp" android:padding="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="1" android:gravity="center_vertical">

        <TextView
            android:id="@+id/senderRecentContactsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" android:textColor="@color/RTDC_grey"
            android:singleLine="true" android:text="Name" android:layout_weight="1"/>

        <TextView
                android:id="@+id/lastTimeSentTextView"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Time"
                android:textSize="12sp" android:gravity="fill_vertical|right"
                android:textColor="@color/RTDC_grey_asbestos" android:paddingRight="10dp"/>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:id="@+id/messagePreviewTextView" android:layout_weight="1" android:textColor="@color/RTDC_grey_asbestos"
            android:textSize="14dp" android:singleLine="true"/>

</LinearLayout>
