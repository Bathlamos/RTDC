<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3" android:layout_gravity="center_vertical"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Unit Name"
                android:id="@+id/unitName"
                android:layout_weight="3" android:textStyle="bold" android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" android:background="@android:color/transparent"
                android:gravity="center" android:textColor="#ff062f4f"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.8" android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Available&#10;Beds"
                android:id="@+id/availableBeds"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#ff062f4f" android:enabled="false" android:background="@android:color/transparent"
                android:textStyle="italic" android:gravity="center"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.8" android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Potential&#10;Discharge"
                android:id="@+id/potentialDC"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#ff062f4f" android:enabled="false" android:background="@android:color/transparent"
                android:textStyle="italic" android:gravity="center"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.8" android:layout_gravity="center_vertical"/>


        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DC By&#10;Deadline"
                android:id="@+id/DCByDeadline"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#ff062f4f" android:enabled="false" android:background="@android:color/transparent"
                android:textStyle="italic" android:gravity="center"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.8" android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total&#10;Admits"
                android:id="@+id/totalAdmits"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#ff062f4f" android:enabled="false" android:background="@android:color/transparent"
                android:textStyle="italic" android:gravity="center"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.8" android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Admits By&#10;Deadline"
                android:id="@+id/admitsByDeadline"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#ff062f4f" android:enabled="false" android:background="@android:color/transparent"
                android:textStyle="italic" android:gravity="center"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.8" android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Status At&#10;Deadline"
                android:id="@+id/statusAtDeadline"
                android:layout_weight="2" android:layout_gravity="center_vertical"
                android:textColor="#ff062f4f" android:enabled="false" android:background="@android:color/transparent"
                android:textStyle="italic" android:gravity="center"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CapacityListView" android:layout_gravity="center_horizontal" android:choiceMode="none"/>
</LinearLayout>