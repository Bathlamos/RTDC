<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="1" android:gravity="center_vertical" android:minHeight="65dp"
              android:nestedScrollingEnabled="true">

    <TextView
        android:id="@+id/senderNameTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="15sp" android:textColor="@color/RTDC_grey"
        android:singleLine="true" android:paddingRight="10dp" android:text="Name"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:id="@+id/messageTextView" android:layout_weight="1" android:textColor="@color/RTDC_black"
            android:textSize="14dp" android:padding="7dp"/>

    <TextView
        android:id="@+id/timeSentTextView"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Time"
        android:textSize="12sp" android:gravity="fill_vertical|right"
        android:textColor="@color/RTDC_grey_asbestos" android:paddingRight="10dp"/>

</LinearLayout>
