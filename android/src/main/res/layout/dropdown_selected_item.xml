<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView style="?android:attr/spinnerItemStyle" xmlns:android="http://schemas.android.com/apk/res/android"
              android:minHeight="48dp" android:singleLine="true" android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:ellipsize="marquee" android:gravity="center_vertical"
              android:id="@+id/dropDownText"
              android:text="Drop Down Item"
              android:layout_centerVertical="true"
              android:layout_toStartOf="@+id/dropDownArrow"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dropDownArrow"
            android:src="@drawable/ic_arrow_drop_down_white_24dp" android:tint="@color/RTDC_black"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>