<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="551dp">
    <ImageButton android:layout_width="70dp" android:layout_height="70dp" android:id="@+id/callButton"
                 android:src="@drawable/ic_phone_white_48dp" android:background="@drawable/circle_green"
                 android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                 android:layout_marginBottom="143dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/personToCall"
            android:layout_above="@+id/callButton" android:layout_centerHorizontal="true"
            android:layout_marginBottom="148dp" android:hint="Name"/>
</RelativeLayout>